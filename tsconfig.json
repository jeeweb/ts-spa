{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"],
  "compilerOptions": {
    "allowJs": true,
    "target": "ES5",
    "outDir": "./build",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2015", "DOM", "DOM.Iterable"],
    "esModuleInterop": true,
    "noImplicitAny": true
  },
  "ts-node": {
    "esm": true
  }
}
